        // Hàm tạo hotspot tùy chỉnh
        function createHotspot(hotSpotDiv, args) {
            // Thêm class cho hotspot
            hotSpotDiv.classList.add('arrow-hotspot');
            
            // Tạo tooltip
            var tooltip = document.createElement('div');
            tooltip.classList.add('arrow-tooltip');
            tooltip.innerHTML = args.text;
            
            // Thêm tooltip vào hotspot
            hotSpotDiv.appendChild(tooltip);
            tooltip.style.display = 'none';
            
            // Hiển thị tooltip khi hover
            hotSpotDiv.addEventListener('mouseenter', function() {
                tooltip.style.display = 'block';
            });
            
            hotSpotDiv.addEventListener('mouseleave', function() {
                tooltip.style.display = 'none';
            });
        }
        
